<h1>Items in the todo list</h1>
<table>
  <thead>
    <th>
      Name
    </th>
    <th>
      Category
    </th>
    <th>
      Deadline
    </th>
  </thead>

  <% for @item in @items %>
    <tr>
      <td>
        <%= @item.name %>
      </td>
      <td>
        <%= @item.category %>
      </td>
      <td>
        <%= @item.deadline %>
      </td>
    </tr>
  <% end %>
</table>
